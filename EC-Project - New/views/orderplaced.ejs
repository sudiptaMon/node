<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product</title>
    <link rel="stylesheet" href="../css/index.css" />
    <!-- Boxicons CSS -->
    <link flex href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <script src="../script/index.js" defer></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <style>
        .body {
            display: flex;
            height: 90vh;
            width: 100vw;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 10px;
        }

        .card {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 10px;
            background-color: lightgray;
            height: 200px;
            width: 300px;
            border-radius: 5px;
        }

        .card span {
            font-size: 30px;
        }

        button {
            margin-left: 200px;
           
            padding: 5px;
            background-color: lightblue;
            border-radius: 10px;
            cursor: pointer;
        }
        .btn{
            width: auto;
            float: right;
        }
    </style>
</head>

<body>

    <%-include('sidebar')%>
        <div class="body">
            <div class="card">
                <span>Order placed</span>
                <span><i class="fa fa-check"
                        style="color: green; border-radius: 50%; border: 2px dotted green; padding: 5px;"></i></span>
            </div>
            <div class="btn">

                <a href="/"> <button type="submit">OK</button></a>
            </div>
        </div>
</body>

</html>